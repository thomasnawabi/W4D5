<h1 class="new-header">New User</h1>


<form class="new-form" action="<%= users_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>
      <label>Email :
        <input type="text" name="user[email]">
      </label>
    </p>
    <p>
      <label>Password :
        <input type="password" name="user[password]">
      </label>
    </p>
    <input class="new-submit" type="submit" value="Sign Up">
</form>
<br>

<%= link_to "Sign in!", new_session_url %>
